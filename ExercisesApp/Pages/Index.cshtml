@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout"; 
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h1 class="mb-3 text-center">Your Fitness Dashboard</h1>
    <p class="text-muted text-center mb-5">Comprehensive solution for exercise tracking, nutrition monitoring and body measurements.</p>

    <div class="d-flex justify-content-center gap-3 mb-4">
        <a href="/start.html" class="btn btn-primary">Start Training</a>
        <a href="/food/foodList.html" class="btn btn-outline-secondary">Add Meal</a>
    </div>

    <h2 class="text-center mb-4">Your Today's Summary</h2>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-fire"></i> Calories</h5>
                    <p class="text-muted">of 2,500 daily goal</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-bar-chart-fill"></i> Workouts</h5>
                    <p class="text-muted">this week</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-body-text"></i> Weight</h5>
                    <p class="text-muted">
                        130kg bench press
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
