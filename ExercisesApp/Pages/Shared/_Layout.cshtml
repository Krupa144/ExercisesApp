<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExercisesApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <header class="bg-dark navbar navbar-expand-md navbar-dark py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">
                <span class="text-primary">Exercises</span><span class="text-white">App</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/AddExercise.html">Exercises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/food/barcode.html">Nutrition</a>
                    </li>
                    
                </ul>
                <div class="d-flex">
                    <a class="btn btn-outline-light me-2" href="/login.html">Login</a>
                    <a class="btn btn-outline-primary" href="/identity.html">Register</a>
                </div>
            </div>
        </div>
    </header>
    <main class="container py-5">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 - ExercisesApp. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>